<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegionmenuActivity"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ภาค"
                android:textColor="#000000"
                android:textSize="48sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:onClick="Thenorthopen"
                android:text="ภาตเหนือ" />

            <Button
                android:id="@+id/button33"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:onClick="Northeasternopen"
                android:text="ภาคอีสาน" />

            <Button
                android:id="@+id/button35"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:onClick="Centralopen"
                android:text="ภาคกลาง" />

            <Button
                android:id="@+id/button36"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:onClick="Southopen"
                android:text="ภาคใต้" />

        </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="330dp"
        app:srcCompat="@drawable/indicato" />

    <ImageView
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/number" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="620dp"
        android:onClick="spinWheel"
        android:text="spin" />
</RelativeLayout>